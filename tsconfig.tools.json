{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node", "vscode", "jest"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "out", "node_modules", "**/*.test.ts"]
}
