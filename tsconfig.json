{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"moduleResolution": "node16",
		"lib": ["ES2020"],
		"rootDir": "src",
		"outDir": "out",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vscode", "jest"],
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["dist", "out", "node_modules", "**/*.test.ts"]
}
